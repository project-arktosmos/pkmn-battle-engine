{
  "name": "arktosmos-pkmn-battle-engine",
  "version": "1.0.0",
  "description": "Standalone Pokemon battle simulator - a complete extraction of battle logic without external dependencies",
  "author": "Pokemon Omnilink",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pokemon-omnilink/arktosmos-pkmn-battle-engine.git"
  },
  "homepage": "https://github.com/pokemon-omnilink/arktosmos-pkmn-battle-engine#readme",
  "bugs": {
    "url": "https://github.com/pokemon-omnilink/arktosmos-pkmn-battle-engine/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "pokemon",
    "battle",
    "simulator",
    "engine",
    "arktosmos"
  ],
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {}
}
